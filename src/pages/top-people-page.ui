<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="MementoTopPeoplePage" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <property name="margin-start">28</property>
    <property name="margin-end">28</property>
    <property name="margin-top">20</property>
    <property name="margin-bottom">28</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkSearchEntry" id="people_search_entry">
            <property name="hexpand">true</property>
            <property name="placeholder-text">Search people</property>
          </object>
        </child>
        <child>
          <object class="GtkDropDown" id="people_role_dropdown">
            <property name="model">
              <object class="GtkStringList">
                <items>
                  <item>Directors</item>
                  <item>Cast</item>
                  <item>Producers</item>
                  <item>Cinematography</item>
                  <item>Music Composers</item>
                </items>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkDropDown" id="people_sort_dropdown">
            <property name="model">
              <object class="GtkStringList">
                <items>
                  <item>Total Appearances (High-Low)</item>
                  <item>Total Appearances (Low-High)</item>
                  <item>Unique Movies (High-Low)</item>
                  <item>Unique Movies (Low-High)</item>
                  <item>Name (A-Z)</item>
                </items>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkStack" id="people_stack">
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">empty</property>
            <property name="child">
              <object class="AdwStatusPage">
                <property name="icon-name">system-users-symbolic</property>
                <property name="title">No People Found</property>
                <property name="description">Try a different search or filter</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">list</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <property name="vexpand">true</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkFlowBox" id="people_grid">
                        <property name="valign">start</property>
                        <property name="halign">center</property>
                        <property name="homogeneous">false</property>
                        <property name="column-spacing">20</property>
                        <property name="row-spacing">28</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="min-children-per-line">2</property>
                        <property name="max-children-per-line">7</property>
                        <property name="selection-mode">none</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="people_pagination_box">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">12</property>
                        <property name="halign">center</property>
                        <property name="margin-top">4</property>
                        <property name="margin-bottom">16</property>
                        <property name="visible">false</property>
                        <child>
                          <object class="GtkButton" id="people_prev_button">
                            <property name="label">Previous</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="people_page_label">
                            <property name="label">Page 1 of 1</property>
                            <style>
                              <class name="dim-label" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="people_next_button">
                            <property name="label">Next</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
