<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="MementoPersonPage" parent="AdwNavigationPage">
    <property name="title" translatable="yes">Person Details</property>
    <property name="tag">person-page</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkButton" id="refresh_button">
                <property name="icon-name">view-refresh-symbolic</property>
                <property name="tooltip-text">Refresh</property>
                <style>
                  <class name="flat" />
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">28</property>
                <property name="margin-top">28</property>
                <property name="margin-bottom">28</property>
                <property name="margin-start">28</property>
                <property name="margin-end">28</property>

                <!-- Header Section -->
                <child>
                  <object class="GtkBox" id="header_box">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">24</property>
                    <property name="halign">center</property>

                    <!-- Profile Photo -->
                    <child>
                      <object class="GtkFrame" id="profile_frame">
                        <property name="css-classes">profile-photo</property>
                        <child>
                          <object class="GtkPicture" id="profile_image">
                            <property name="width-request">150</property>
                            <property name="height-request">150</property>
                            <property name="content-fit">cover</property>
                            <property name="css-classes">circular</property>
                            <property name="can-shrink">false</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Info -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="valign">center</property>
                        <property name="spacing">8</property>

                        <child>
                          <object class="GtkLabel" id="name_label">
                            <property name="css-classes">title-1</property>
                            <property name="xalign">0</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel" id="birthday_label">
                            <property name="css-classes">body</property>
                            <property name="xalign">0</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel" id="place_of_birth_label">
                            <property name="css-classes">caption, dim-label</property>
                            <property name="xalign">0</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- Biography -->
                <child>
                  <object class="GtkBox" id="bio_box">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="visible">false</property>

                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Biography</property>
                        <property name="css-classes">heading</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkLabel" id="biography_label">
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                        <property name="selectable">true</property>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- Tabs -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>

                    <child>
                      <object class="AdwViewSwitcher" id="view_switcher">
                        <property name="policy">wide</property>
                        <property name="stack">stack</property>
                      </object>
                    </child>

                    <child>
                      <object class="AdwViewStack" id="stack">

                        <!-- Watched Page -->
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="name">watched</property>
                            <property name="title">Watched</property>
                            <property name="icon-name">view-list-symbolic</property>
                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">12</property>
                                <property name="margin-top">12</property>

                                <child>
                                  <object class="GtkLabel" id="watched_empty_label">
                                    <property name="label">No watched movies found.</property>
                                    <property name="css-classes">dim-label</property>
                                    <property name="visible">false</property>
                                    <property name="margin-top">24</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkFlowBox" id="watched_grid">
                                    <property name="valign">start</property>
                                    <property name="homogeneous">true</property>
                                    <property name="column-spacing">24</property>
                                    <property name="row-spacing">28</property>
                                    <property name="min-children-per-line">2</property>
                                    <property name="max-children-per-line">6</property>
                                    <property name="selection-mode">none</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>

                        <!-- Watchlist Page -->
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="name">watchlist</property>
                            <property name="title">Watchlist</property>
                            <property name="icon-name">starred-symbolic</property>
                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">12</property>
                                <property name="margin-top">12</property>

                                <child>
                                  <object class="GtkLabel" id="watchlist_empty_label">
                                    <property name="label">No movies in watchlist found.</property>
                                    <property name="css-classes">dim-label</property>
                                    <property name="visible">false</property>
                                    <property name="margin-top">24</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkFlowBox" id="watchlist_grid">
                                    <property name="valign">start</property>
                                    <property name="homogeneous">true</property>
                                    <property name="column-spacing">24</property>
                                    <property name="row-spacing">28</property>
                                    <property name="min-children-per-line">2</property>
                                    <property name="max-children-per-line">6</property>
                                    <property name="selection-mode">none</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>

                        <!-- Explore More Page -->
                        <child>
                          <object class="AdwViewStackPage">
                            <property name="name">explore</property>
                            <property name="title">Explore More</property>
                            <property name="icon-name">non-starred-symbolic</property>
                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">12</property>
                                <property name="margin-top">12</property>

                                <child>
                                  <object class="GtkLabel" id="explore_empty_label">
                                    <property name="label">Click to explore more movies...</property>
                                    <property name="css-classes">dim-label</property>
                                    <property name="visible">true</property>
                                    <property name="margin-top">24</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkFlowBox" id="explore_grid">
                                    <property name="valign">start</property>
                                    <property name="homogeneous">true</property>
                                    <property name="column-spacing">24</property>
                                    <property name="row-spacing">28</property>
                                    <property name="min-children-per-line">2</property>
                                    <property name="max-children-per-line">6</property>
                                    <property name="selection-mode">none</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>

                      </object>
                    </child>
                  </object>
                </child>

              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
