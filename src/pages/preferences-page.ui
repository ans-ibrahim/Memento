<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="MementoPreferencesPage" parent="AdwNavigationPage">
    <property name="title">Preferences</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" />
        </child>
        <property name="content">
          <object class="AdwPreferencesPage">
            
            <!-- TMDB Configuration -->
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">The Movie Database (TMDB)</property>
                <property name="description">Configure your TMDB API key for movie search and information</property>
                <child>
                  <object class="AdwEntryRow" id="api_key_row">
                    <property name="title">API Key</property>
                    <property name="show-apply-button">true</property>
                    <signal name="apply" handler="_onApiKeyApply" swapped="no"/>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Get API Key</property>
                    <property name="subtitle">Visit themoviedb.org to create a free account and generate an API key</property>
                    <property name="activatable">true</property>
                    <signal name="activated" handler="_onGetApiKeyActivated" swapped="no"/>
                    <child type="suffix">
                      <object class="GtkImage">
                        <property name="icon-name">adw-external-link-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Behavior Settings -->
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Behavior</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Auto-remove from Watchlist</property>
                    <property name="subtitle">Automatically remove movies from watchlist when you add a play</property>
                    <child type="suffix">
                      <object class="GtkSwitch" id="auto_remove_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Enable TMDB rating</property>
                    <property name="subtitle">Show TMDB rating in the ratings section</property>
                    <child type="suffix">
                      <object class="GtkSwitch" id="tmdb_rating_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Enable IMDb rating</property>
                    <property name="subtitle">Fetch and show IMDb rating in the ratings section</property>
                    <child type="suffix">
                      <object class="GtkSwitch" id="imdb_rating_switch">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Data Settings -->
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Data</property>
                <child>
                  <object class="AdwActionRow" id="refresh_movies_row">
                    <property name="title">Refresh all movies</property>
                    <property name="subtitle">Re-download details and credits for every saved movie</property>
                    <child type="suffix">
                      <object class="GtkButton" id="refresh_all_button">
                        <property name="label">Refresh</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="refresh_imdb_ratings_row">
                    <property name="title">Refresh all IMDb ratings</property>
                    <property name="subtitle">Update cached IMDb ratings for all saved movies</property>
                    <child type="suffix">
                      <object class="GtkButton" id="refresh_imdb_ratings_button">
                        <property name="label">Refresh</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="refresh_progress_row">
                    <property name="title">Refresh progress</property>
                    <property name="visible">false</property>
                    <child type="suffix">
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="hexpand">true</property>
                        <property name="halign">fill</property>
                        <child>
                          <object class="GtkProgressBar" id="refresh_progress_bar">
                            <property name="hexpand">true</property>
                            <property name="show-text">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="refresh_imdb_progress_row">
                    <property name="title">IMDb refresh progress</property>
                    <property name="visible">false</property>
                    <child type="suffix">
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="hexpand">true</property>
                        <property name="halign">fill</property>
                        <child>
                          <object class="GtkProgressBar" id="refresh_imdb_progress_bar">
                            <property name="hexpand">true</property>
                            <property name="show-text">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
