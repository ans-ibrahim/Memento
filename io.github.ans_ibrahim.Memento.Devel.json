{
    "id": "io.github.ans_ibrahim.Memento.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "io.github.ans_ibrahim.Memento",
    "separate-locales": true,
    "rename-desktop-file": "io.github.ans_ibrahim.Memento.desktop",
    "rename-appdata-file": "io.github.ans_ibrahim.Memento.metainfo.xml",
    "rename-icon": "io.github.ans_ibrahim.Memento",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "memento",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
